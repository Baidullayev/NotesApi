@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<p>@ViewBag.Message</p>
@*<div>
        <a asp-controller="Account" asp-action="Login">Login</a>
    </div>*@


<div class="row justify-content-center">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-md-6">
        <div class="card">
            <header class="card-header">
                <a class="float-right btn btn-outline-primary mt-1" asp-controller="Account" asp-action="Login">Войти</a>
                <h4 class="card-title mt-2">Регистрация</h4>
            </header>
            <article class="card-body">
                <form method="post" asp-controller="Account" asp-action="Register">
                    <div class="form-row">
                        <div class="col form-group">
                            <label asp-for="Username">Имя пользователя</label>
                            <input asp-for="Username" class="form-control" placeholder="" />
                            <span asp-validation-for="Username"></span>
                        </div> <!-- form-group end.// -->
                        <div class="col form-group">
                            <label asp-for="Lastrname">Имя пользователя</label>
                            <input asp-for="Lastrname" class="form-control" placeholder="" />
                            <span asp-validation-for="Lastrname"></span>
                        </div> <!-- form-group end.// -->
                        <div class="col form-group">
                            <label asp-for="Firstname">Имя пользователя</label>
                            <input asp-for="Firstname" class="form-control" placeholder="" />
                            <span asp-validation-for="Firstname"></span>
                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row end.// -->
                    <div class="form-group">
                        @*<label>Элетронная почта</label>
                            <input type="email" class="form-control" placeholder="">
                            <small class="form-text text-muted"></small>*@
                        <label asp-for="Email">Имя пользователя</label>
                        <input asp-for="Email" class="form-control" placeholder="" />
                        <span asp-validation-for="Email"></span>
                    </div> <!-- form-group end.// -->

                    <div class="form-group">
                        <label asp-for="Password">Пароль</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password"></span>
                    </div> <!-- form-group end.// -->
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Повторите пароль</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div> <!-- form-group end.// -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Регистрация  </button>
                    </div> <!-- form-group// -->
                    <small class="text-muted"> <br> </small>
                </form>
            </article> <!-- card-body end .// -->
            <div class="border-top card-body text-center">Уже зарегистрированы? <a asp-controller="Account" asp-action="Login">Войти</a></div>
        </div> <!-- card.// -->
    </div> <!-- col.//-->

</div> <!-- row.//-->
